function add(a, b) {
    return a + b;
}

function subtract(a, b) {
    return a - b;
}

function multiply(a, b) {
    return a * b;
}

function divide(a, b) {
    if (b !== 0) {
        return a / b;
    } else {
        return "Error: Division by zero!";
    }
}

// Copilot generated the functions for addition, subtraction, multiplication, and division.
// It also suggested error handling for division by zero, which was helpful. 
// I added button logic and linked the CSS styling manually.
